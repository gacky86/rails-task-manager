<%= form_with model: @task do |f|%>
  <%# how to use bootstrap form with rails form_with %>
  <%= form_with(model: @your_model, local: true) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :title, 'Task title', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', id: 'exampleFormControlInput1' %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :details, 'Details', class: 'form-label' %>
      <%= form.text_area :details, class: 'form-control', id: 'exampleFormControlTextarea1', rows: 3 %>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>



